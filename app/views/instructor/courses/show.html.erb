<script>
  $(function() {
    $('.lessons').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { lesson: { row_order_position: ui.item.index() } }
        });
      }
    });
   });
</script>

<br />
<div class="booyah-box col-10 offset-1">
    <h1 class="text-center"><%= current_course.title %></h1>
    <br />
    <% if current_course.image.url %>     
    <%= image_tag current_course.image.url, class: 'img-fluid' %>
    <% end %>
    <%= link_to 'Preview As Student', course_path(current_course), class: 'btn btn-warning float-right' %>
    <br class="clr" />
    <br />
    <div class="text-center">
        <%= link_to 'Add a new Section', new_instructor_course_section_path(current_course), class: 'btn btn-dark btn-lg' %>
    </div>


  <div class="col-12">
    <% @course.sections.each do |section| %>
      <br /><br />
      <div class="section">
        <h3>
          <%= section.title %>
        </h3>
        <div class="row">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class="lesson text-center">
                <br />
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  <br />
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class="clr" />
      </div>
    <% end %>
  </div>
  
</div>