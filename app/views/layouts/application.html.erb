<!DOCTYPE html>
<html>
  <head>
    <title>DIVE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Damion&family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@500&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to 'Dive.', root_path, class: 'navbar-brand' %>
       
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav mr-auto mt-2 mt-md-0 float-lg-right">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link'  %></li>
            Welcome back, <%= current_user.email %>
          <% else %>
            <li class="nav-item"><%= link_to 'Sign In', new_user_session_path, class: 'nav-link'  %></li>
            <li class="nav-item"><%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link'  %></li>
          <% end %>
          </ul>
        </div>
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %> 
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

    <%= yield %>
    </div>

   <div id="footer">
    <div class="container">
      <b>Want to teach a course?</b>
      <%= link_to 'Click here to get started.', new_instructor_course_path %>
      </div>
    </div>

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>


